{% trans_default_domain 'FOSUserBundle' %}
<div class="panel-body">

    <div class="row form-group">

        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
              class="fos_user_registration_register">

            {{ form_label(form.username ,null, {'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
            <div class="col-sm-9">
                {{ form_widget(form.username, {'attr': {'placeholder':'nom', 'class':'form-control '} } ) }}
            </div>
            {{ form_errors(form.username) }}

            {{ form_label(form.email ,null,{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
            <div class="col-sm-9">
                {{ form_widget(form.email, {'attr': {'placeholder':'nom', 'class':'form-control '} } ) }}
            </div>
            {{ form_errors(form.email) }}

            {{ form_label(form.plainPassword.first ,null,{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.first, {'attr': {'placeholder':'nom', 'class':'form-control '} } ) }}
            </div>
            {{ form_errors(form.plainPassword.first) }}

            {{ form_label(form.plainPassword.second ,null,{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.second, {'attr': {'placeholder':'nom', 'class':'form-control '} } ) }}
            </div>
            {{ form_errors(form.plainPassword.second) }}



            <div>
                <input class="btn btn-primary btn-block btn-lg" type="submit" value="Enregistrer l'utilisateur"/>
            </div>


{#important avec FOSuser de fermer avec form_end ou form_rest, ajoute token indispensable Ã  la validation ! :#}
            {{ form_end(form) }}
    </div>
</div>
