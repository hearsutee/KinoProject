{% extends 'TroiswaPublicBundle::layout.html.twig' %}



{% block content %}

	<!-- Javascript -->
	<script>

		$("#select2-colors-examples select").select2();

	</script>
	<!-- / Javascript -->

	<h3>Modifier un Acteur :</h3>

	{#{{ tinymce_init() }}#}



	{{ form_start(form,{'method':'POST','attr' : {'class':'panel form-horizontal'} }) }}

	<div class="panel-body">
		<div class="row form-group">
			{{ form_label(form.nom,"nom de l'acteur :" ,{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}

			<div class="col-sm-9">
				{{ form_widget(form.nom, {'attr': {'placeholder':'nom', 'class':'form-control '} } ) }}
			</div>

			{{ form_errors(form.nom) }}

		</div>

		<div class="row form-group">
			{{ form_label(form.image.file,"image :" ,{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
			<div class="col-sm-9">
				{{ form_widget(form.image.file, {'attr': {'placeholder':'image', 'class':'form-control '} } ) }}
			</div>

			{{ form_errors(form.image.file) }}
		</div>


		<div class="row form-group">
			{{ form_label(form.biographie , 'biographie :' ,{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
			<div class="col-sm-9">
				{{ form_widget(form.biographie, {'attr': {'placeholder':'biographie', 'class':'form-control tinymce'} } ) }}
			</div>
			{{ form_errors(form.biographie) }}
		</div>


		<div class="row form-group">
			{{ form_label(form.naissance , 'date de naissance : ' , {'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
			<div class="col-sm-9">
				{{ form_widget(form.naissance, { 'attr': {'placeholder':'dd', 'class':'form-control '} } ) }}
			</div>

			{{ form_errors(form.naissance) }}
		</div>

		{#<div class="row form-group">#}
		{#{{ form_label(form.active , 'film apparent ? : ' , {'label_attr': { 'class':'col-sm-3 control-label'} } ) }}#}
