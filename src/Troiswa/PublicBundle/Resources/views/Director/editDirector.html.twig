		{#{{ form_errors(form.active) }}#}
		{#</div>#}

		<br>

		<div id="select2-colors-examples">
			{{ form_label(form.films , 'cliquez dans le cadre pour choisir des films : ' , {'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
			<div class="select2-success">
				{{ form_widget(form.films, {'id':'films','attr': {'class':'form-control '} } ) }}
			</div>

			{{ form_errors(form.films) }}

			<br/>
			<br/>

		</div>

		<div class="row form-group">
			<div class="col-sm-9">
				{{ form_widget(form.Modifier, {'attr': { 'class':'btn btn-primary'} }) }}
			</div>

		</div>

	</div>


	{#en fermant un formulauire comme ceci Twig ajoute automatiquement les champs qui ne sont pas la..#}
	{{ form_end(form) }}
	{#sinon fermer en html normal..#}

	{# affiche success #}
	{% for flash in app.session.flashbag.get('notice') %}
