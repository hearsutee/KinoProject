{% extends 'TroiswaPublicBundle::layout.html.twig' %}

{% block content %}

	<h3>Modifier le commentaire:</h3>

	{#{{ tinymce_init() }}#}



	{{ form_start(form,{'method':'POST','attr' : {'class':'panel form-horizontal'} }) }}

	<div class="panel-body">
		<div class="row form-group">
			{{ form_label(form.titre,'Titre(Entete) :',{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
			<div class="col-sm-9">
				{{ form_widget(form.titre, {'attr': {'placeholder':'Titre', 'class':'form-control '} } ) }}
			</div>

			{{ form_errors(form.titre) }}
		</div>


		<div class="row form-group">
			{{ form_label(form.contenu , 'votre message :' ,{'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
			<div class="col-sm-9">
				{{ form_widget(form.contenu, {'attr': {'placeholder':'Synopsis', 'class':'form-control tinymce'} } ) }}
			</div>
			{{ form_errors(form.contenu) }}
		</div>


		<div class="row form-group">
			{{ form_label(form.note , 'note : ' , {'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
			<div class="col-sm-9">
				{{ form_widget(form.note, {'attr': {'placeholder':'', 'class':'form-control '} } ) }}
			</div>

			{{ form_errors(form.note) }}
		</div>


		<br>


		<div class="row form-group">
			<div class="col-sm-9">
				{{ form_widget(form.Ajouter, {'attr': { 'class':'btn btn-primary'} }) }}
			</div>

		</div>

	</div>


	{#en fermant un formulauire comme ceci Twig ajoute automatiquement les champs qui manquent #}
	{{ form_end(form) }}
	{#sinon fermer en html#}


	{% for flash in app.session.flashbag.get('notice') %}
		<div class="alert alert-success">
			<h1>{{ flash }}</h1>
		</div>

	{% endfor %}

{% endblock %}
